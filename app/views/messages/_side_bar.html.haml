.chat-side
  .chat-side__item
    .chat-side__item--box
      %p.chat-side-item__box--name 
        = current_user.name
      %ul.chat-side__item--box--icons
        %li.chat-side-item-box__icons--group-sistem
          = link_to new_group_path do
            = icon('fas', 'edit', class: 'icon')
        %li.chat-side-item-box__icons--edit-name
          = link_to edit_user_path(current_user) do
            = icon('fas', 'cog', class: 'icon')
  .chat-side__group
    - current_user.groups.each do |group|
      .group
        = link_to group_messages_path(group) do
          .chat-side__group--menus
            %p.chat-side-grops__menus--groups
              = group.name
            %p.chat-side-groups__menus--messages
              = group.show_last_message